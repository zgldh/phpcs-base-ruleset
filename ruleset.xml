<?xml version="1.0"?>
<ruleset name="Shinetech Zhengzhou Base PHP Standard" namespace="ShinetechZZ\PHP\Standard">

    <description>The Shinetech Zhengzhou Base PHP coding standard. Obey and be better.</description>

    <arg name="report" value="checkstyle"/>
    <arg name="report-file" value="phpcs_report.xml"/>
    <arg name="encoding" value="utf-8"/>

    <rule ref="Generic.Files.LineEndings" />

    <rule ref="Internal.NoCodeFound">
        <exclude-pattern>*.blade.php</exclude-pattern>
    </rule>
</ruleset>
